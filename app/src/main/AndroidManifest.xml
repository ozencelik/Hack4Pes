<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="design.hibiscus.hack4city">

    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.NoActionBar">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".RegisterActivity" />
        <activity android:name=".LoginActivity" />
        <activity android:name=".Menu_TR" />
        <activity android:name=".Menu_EN" />
        <activity android:name=".iletisim" />
        <activity android:name=".iletisim_en" />
        <activity
            android:name=".LocationActivity"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name=".TabActivity"
            android:label="@string/title_activity_tab" />
        <activity android:name=".disabled1" />
        <activity android:name=".disabled14" />
        <activity android:name=".disabled_en"></activity>
    </application>

</manifest>